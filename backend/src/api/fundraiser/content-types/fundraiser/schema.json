{
  "kind": "collectionType",
  "collectionName": "fundraisers",
  "info": {
    "singularName": "fundraiser",
    "pluralName": "fundraisers",
    "displayName": "Fundraiser",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "ShortDescription": {
      "type": "text",
      "required": true,
      "maxLength": 200,
      "minLength": 100
    },
    "Goal": {
      "type": "integer",
      "default": 0,
      "required": true
    },
    "Cover": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "Story": {
      "type": "richtext"
    },
    "DonationLink": {
      "type": "string",
      "required": true
    },
    "AdditionalContentOptional": {
      "type": "component",
      "repeatable": true,
      "component": "blocks.section"
    },
    "URL": {
      "type": "uid",
      "targetField": "Title",
      "required": true
    }
  }
}
