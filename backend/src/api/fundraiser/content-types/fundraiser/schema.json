{
  "kind": "collectionType",
  "collectionName": "fundraisers",
  "info": {
    "singularName": "fundraiser",
    "pluralName": "fundraisers",
    "displayName": "Fundraiser",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "shortDescription": {
      "type": "text",
      "required": true,
      "maxLength": 200,
      "minLength": 100
    },
    "goal": {
      "type": "integer",
      "default": 0,
      "required": true
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "story": {
      "type": "richtext"
    },
    "donationLink": {
      "type": "string",
      "required": true
    },
    "additional": {
      "type": "component",
      "repeatable": true,
      "component": "blocks.section"
    },
    "slug": {
      "type": "uid",
      "required": true,
      "targetField": "title"
    }
  }
}
